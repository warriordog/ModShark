{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "ModShark": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ModShark": {
    "Sharkey": {
      "IdFormat": "aidx",
      "ServiceAccount": "instance.actor",
      "ApiEndpoint": "http://127.0.0.1:3000",
      "PublicHost": "",
      "MaxNoteLength": 3000
    },
    
    "Postgres": {
      "Connection": "Host=localhost; Port=5432; Database=sharkey; Username=sharkey; Password=sharkey;",
      "Timeout": 30
    },

    "Worker": {
      "PollInterval": 1800000
    },
    
    "Reporters": {
      "SendGrid": {
        "Enabled": false,
        "IncludeFlags": true,
        "ApiKey": "",
        "FromAddress": "",
        "FromName": "ModShark",
        "ToAddresses": []
      },
      
      "Console": {
        "Enabled": true
      },
      
      "Native": {
        "Enabled": true,
        "UseApi": false,
        "InstanceReportComment": "ModShark: instance matched one or more flagged patterns",
        "UserReportComment": "ModShark: user matched one or more flagged patterns",
        "NoteReportComment": "ModShark: note matched one or more flagged patterns"
      },
      
      "Post": {
        "Enabled": false,
        "Visibility": "followers",
        "LocalOnly": true,
        "Audience": [],
        "Subject": "ModShark Report",
        "Template": "$report_body",
        "IncludeFlags": false
      },
      
      "WebHook": {
        "Enabled": false,
        "Hooks": [
          {
            "Url": "",
            "Type": "Discord",
            "MaxLength": 2000,
            "IncludeFlags": true
          }
        ]
      }
    },
    
    "Rules": {
      "FlaggedUser": {
        "Enabled": false,
        "Timeout": 1000,
        "BatchLimit": 5000,
        
        "IncludeLocal": true,
        "IncludeRemote": true,
        
        "IncludeDeleted": false,
        "IncludeSuspended": false,
        "IncludeSilenced": false,
        
        "IncludeBlockedInstance": false,
        "IncludeSilencedInstance": true,
        
        "AgeRanges": [],
        "UsernamePatterns": [],
        "DisplayNamePatterns": [],
        "BioPatterns": []
      },

      "FlaggedInstance": {
        "Enabled": false,
        "Timeout": 1000,
        "BatchLimit": 5000,
        
        "IncludeSuspended": false,
        "IncludeSilenced": false,
        "IncludeBlocked": false,
        
        "NamePatterns": [],
        "HostnamePatterns": [],
        "DescriptionPatterns": [],
        "ContactPatterns": [],
        "SoftwarePatterns": []
      },
      
      "FlaggedNote": {
        "Enabled": false,
        "Timeout": 1000,
        "BatchLimit": 5000,

        "IncludeLocal": true,
        "IncludeRemote": true,
        
        "IncludeCW": true,
        
        "IncludeUnlistedVis": true,
        "IncludeFollowersVis": false,
        "IncludePrivateVis": false,

        "IncludeSilencedUser": true,
        "IncludeSuspendedUser": false,
        "IncludeDeletedUser": false,

        "IncludeSilencedInstance": true,
        "IncludeBlockedInstance": false,

        "TextPatterns": [],
        "EmojiPatterns": []
      }
    }
  }
}
